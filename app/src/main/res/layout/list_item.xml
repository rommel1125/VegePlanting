<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:padding="16dp">


    <ImageView
        android:id="@+id/planImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/eggplant"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/planVegetableName"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="EGGPLANT"
            android:fontFamily="sans-serif-black"
            android:textSize="24dp"
            android:textColor="@color/app_green"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#099759"
                android:text="SEEDS PLANTED: "/>
            <TextView
                android:id="@+id/planCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="20"
                android:textColor="#099759"
                android:fontFamily="sans-serif-condensed-medium"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATE PLANTED"
            android:textColor="#099759"
            android:fontFamily="sans-serif-condensed-medium"
            android:letterSpacing=".1"/>
        <TextView
            android:id="@+id/planDatePlanted"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATE PLANTED"
            android:textColor="#099759"
            android:fontFamily="sans-serif-condensed-medium"
            android:letterSpacing=".1"/>
    </LinearLayout>
</LinearLayout>